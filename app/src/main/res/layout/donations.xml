<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground"
    tools:context=".view.main.donations.DonationsFragment">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:elevation="10dp"
        android:src="@drawable/imageapp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Gracias por ayudarnos"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/desc_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Todas las donaciones son hechas a través de MercadoPago"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/desc"
        app:layout_constraintRight_toRightOf="@id/desc"
        app:layout_constraintTop_toBottomOf="@id/desc" />

    <TextView
        android:id="@+id/donate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/title"
        android:fontFamily="@font/roboto_bold"
        android:text="Elegí el monto que prefieras"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/donate_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_2" />

    <TextView
        android:id="@+id/donate_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ripple_round_white"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:elevation="5dp"
        android:padding="16dp"
        android:text="Donar $200"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintBottom_toTopOf="@id/donate_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/donate_2"
        app:layout_constraintTop_toBottomOf="@id/donate_text" />

    <TextView
        android:id="@+id/donate_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:elevation="5dp"
        android:background="@drawable/ripple_round_white"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="16dp"
        android:text="Donar $500"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintBottom_toBottomOf="@id/donate_1"
        app:layout_constraintLeft_toRightOf="@id/donate_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/donate_1" />

    <TextView
        android:id="@+id/donate_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/ripple_round_white"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="16dp"
        android:text="Donar $1000"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/donate_1"
        app:layout_constraintRight_toRightOf="@id/donate_1"
        app:layout_constraintTop_toBottomOf="@id/donate_1" />

    <TextView
        android:id="@+id/donate_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:background="@drawable/ripple_round_white"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="16dp"
        android:text="Donar $2000"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintBottom_toBottomOf="@id/donate_3"
        app:layout_constraintLeft_toLeftOf="@id/donate_2"
        app:layout_constraintRight_toRightOf="@id/donate_2"
        app:layout_constraintTop_toTopOf="@id/donate_3" />


</androidx.constraintlayout.widget.ConstraintLayout>