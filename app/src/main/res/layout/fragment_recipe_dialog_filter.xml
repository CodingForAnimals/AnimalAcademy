<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".view.recipes.dialogs.filter.RecipeFilterDialogFragment">

    <TextView
        android:id="@+id/filter_recipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Filtrar recetas"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/taste_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/meal_group"
        app:layout_constraintTop_toBottomOf="@id/filter_recipe_text">

        <RadioButton
            android:id="@+id/taste_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:checked="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Ambos"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/taste_salty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Salado"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/taste_sweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Dulce"
            android:textColor="@color/white" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/meal_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/taste_group"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/taste_group">

        <RadioButton
            android:id="@+id/meal_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:checked="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Ambos"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/meal_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Plato"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/meal_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Desayuno"
            android:textColor="@color/white" />

    </RadioGroup>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/transparent_accentborder"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Cancelar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/accept" />

    <TextView
        android:id="@+id/accept"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/transparent_accentborder"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Aceptar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/cancel"
        app:layout_constraintLeft_toRightOf="@id/cancel"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>