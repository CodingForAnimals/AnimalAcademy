<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="64dp"
    android:background="@color/blackBackground">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintRight_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/border"
        app:round="24dp" />


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@color/white"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="26dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/likes_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/border"
        app:layout_constraintTop_toBottomOf="@id/border">

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/roboto_bold"
            android:text="0"
            android:textColor="@color/superAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ic_like"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_like"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_like"
            app:layout_constraintBottom_toBottomOf="@id/likes"
            app:layout_constraintLeft_toRightOf="@id/likes"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/likes"
            app:tint="@color/superAccent" />

        <ProgressBar
            android:id="@+id/likes_progressbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/likes"
            app:layout_constraintLeft_toRightOf="@id/ic_like"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/likes" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/src"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imageapp"
        app:layout_constraintBottom_toBottomOf="@id/border"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintRight_toRightOf="@id/border"
        app:layout_constraintTop_toTopOf="@id/border"
        app:round="24dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Queso de papa"
        android:textColor="@color/nearBlack"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintTop_toBottomOf="@id/border" />

</androidx.constraintlayout.widget.ConstraintLayout>