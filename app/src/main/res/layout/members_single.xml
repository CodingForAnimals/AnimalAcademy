<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/member_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="1"
        android:text="AgustÃ­n Magne"
        android:textColor="@color/white"
        android:textSize="@dimen/important" />

    <TextView
        android:id="@+id/member_email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/blackBackground"
        android:fontFamily="@font/typer_roboto_italic"
        android:maxLines="1"
        android:text="agusmagne@gmail.com"
        android:textColor="@color/navBarOff"
        android:textSize="@dimen/text" />


    <TextView
        android:id="@+id/member_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center_horizontal"
        android:text="Miembro fundador"
        android:textColor="@color/navBarOff"
        android:textSize="@dimen/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/member_name_txt"
        app:layout_constraintTop_toBottomOf="@id/member_email_txt" />

</LinearLayout>