<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <ImageView
        android:id="@+id/info_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_brightness_1_24"
        app:layout_constraintBottom_toBottomOf="@id/info_ingredient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/info_ingredient" />

    <TextView
        android:id="@+id/info_ingredient"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Bananas"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintLeft_toRightOf="@id/info_icon"
        app:layout_constraintRight_toLeftOf="@id/info_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_amount"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="1/4 de taza"
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintLeft_toRightOf="@id/info_ingredient"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/info_ingredient" />

</androidx.constraintlayout.widget.ConstraintLayout>