<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground">

    <EditText
        android:id="@+id/filter_edtxt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="no"
        android:background="@drawable/darkpurpleoundfilled60dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_bold"
        android:hint="Busca una receta"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/navBarOff"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/filter_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:padding="8dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/filter_edtxt"
        app:layout_constraintRight_toRightOf="@id/filter_edtxt"
        app:layout_constraintTop_toTopOf="@id/filter_edtxt"
        app:tint="@color/navBarOn" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/filter_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="@id/filter_edtxt"
        app:layout_constraintLeft_toRightOf="@id/filter_edtxt"
        app:layout_constraintRight_toLeftOf="@id/add_recipe"
        app:layout_constraintTop_toTopOf="@id/filter_edtxt"
        app:tint="@color/white" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/add_recipe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="36dp"
        android:padding="8dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/filter_edtxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/filter_edtxt"
        app:tint="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipes_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/filter_edtxt" />

</androidx.constraintlayout.widget.ConstraintLayout>