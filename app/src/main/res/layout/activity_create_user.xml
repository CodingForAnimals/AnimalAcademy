<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false">

        <ImageView
            android:id="@+id/progress_bar_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="30dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back_arrow"
            android:tint="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/logounsigned"
            android:transitionName="logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Ingresa tus datos"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <ImageView
            android:id="@+id/name_field"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/blackroundborder40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/roboto"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Nombre"
            app:layout_constraintBottom_toTopOf="@+id/name_field"
            app:layout_constraintLeft_toLeftOf="@id/name_field"
            app:layout_constraintTop_toTopOf="@id/name_field" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/person"
            android:tint="@color/transparent_purple"
            app:layout_constraintBottom_toBottomOf="@id/name_field"
            app:layout_constraintRight_toRightOf="@id/name_field"
            app:layout_constraintTop_toTopOf="@id/name_field" />


        <EditText
            android:id="@+id/name_txt"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/name_field"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/name_field"
            app:layout_constraintRight_toRightOf="@id/name_field"
            app:layout_constraintTop_toTopOf="@id/name_field" />

        <ImageView
            android:id="@+id/email_field"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/blackroundborder40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_field" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="@color/white"
            android:fontFamily="@font/roboto"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Email"
            app:layout_constraintBottom_toTopOf="@+id/email_field"
            app:layout_constraintLeft_toLeftOf="@id/email_field"
            app:layout_constraintTop_toTopOf="@id/email_field" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/email"
            android:tint="@color/transparent_purple"
            app:layout_constraintBottom_toBottomOf="@id/email_field"
            app:layout_constraintRight_toRightOf="@id/email_field"
            app:layout_constraintTop_toTopOf="@id/email_field" />


        <EditText
            android:id="@+id/email_txt"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/email_field"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/email_field"
            app:layout_constraintRight_toRightOf="@id/email_field"
            app:layout_constraintTop_toTopOf="@id/email_field" />


        <ImageView
            android:id="@+id/password_field"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/blackroundborder40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_field" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="@color/white"
            android:fontFamily="@font/roboto"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Contraseña"
            app:layout_constraintBottom_toTopOf="@+id/password_field"
            app:layout_constraintLeft_toLeftOf="@id/password_field"
            app:layout_constraintTop_toTopOf="@id/password_field" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/password"
            android:tint="@color/transparent_purple"
            app:layout_constraintBottom_toBottomOf="@id/password_field"
            app:layout_constraintRight_toRightOf="@id/password_field"
            app:layout_constraintTop_toTopOf="@id/password_field" />

        <EditText
            android:id="@+id/password_txt"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/password_field"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/password_field"
            app:layout_constraintRight_toRightOf="@id/password_field"
            app:layout_constraintTop_toTopOf="@id/password_field" />


        <ImageView
            android:id="@+id/confpassword_field"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/blackroundborder40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_field" />


        <TextView
            android:id="@+id/confpassword_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="@color/white"
            android:fontFamily="@font/roboto"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Confirme su contraseña"
            app:layout_constraintBottom_toTopOf="@+id/confpassword_field"
            app:layout_constraintLeft_toLeftOf="@id/confpassword_field"
            app:layout_constraintTop_toTopOf="@id/confpassword_field" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/password"
            android:tint="@color/transparent_purple"
            app:layout_constraintBottom_toBottomOf="@id/confpassword_field"
            app:layout_constraintRight_toRightOf="@id/confpassword_field"
            app:layout_constraintTop_toTopOf="@id/confpassword_field" />

        <EditText
            android:id="@+id/confpassword_txt"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/confpassword_field"
            app:layout_constraintLeft_toLeftOf="@id/confpassword_field"
            app:layout_constraintRight_toRightOf="@id/confpassword_field"
            app:layout_constraintTop_toTopOf="@id/confpassword_field" />


        <ImageView
            android:id="@+id/start_create_user_filled_btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:elevation="20dp"
            android:background="@drawable/purpleroundfilled"
            android:transitionName="image_slides_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confpassword_field" />

        <TextView
            android:id="@+id/start_create_user_filled_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/crear_usuario"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:transitionName="text_slides_down"
            app:layout_constraintBottom_toBottomOf="@id/start_create_user_filled_btn"
            app:layout_constraintLeft_toLeftOf="@id/start_create_user_filled_btn"
            app:layout_constraintRight_toRightOf="@id/start_create_user_filled_btn"
            app:layout_constraintTop_toTopOf="@id/start_create_user_filled_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>